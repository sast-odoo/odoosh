<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <record model="ir.cron" id="cancel_expired_orders">
            <field name="name">Cancel Expired Orders</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model._cancel_expired_orders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 04:00:00')"/>
            <!-- ^^ runs at midnight EST (or 4:00 UTC)-->
        </record>
    </data>
</odoo>