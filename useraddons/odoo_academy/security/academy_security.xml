<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_academy_admin" model="res.groups">
    <!--This id (group_academy_admin) is the group_id/id in the csv. The model_id/id in the csv was found by running odoo,
    going to the course model, debug->view metadata, then looking at XML ID-->
        <field name="name">Academy / Admin</field>
    </record>

    <record id="only_active_motify"> <!--Only let changes be done on active course-->
        <field name="name">Only Active Courses Can Be Modified</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="1"/>
        <!--Domain: these permissions will only apply to courses where "active" is set to true-->
        <field name="domain_force">[("active"',"=","True")]</field>
        <field name="model_id" ref="model_academy_course"/>
    </record>
</odoo>