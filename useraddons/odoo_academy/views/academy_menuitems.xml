<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="course_list_actions"> <!--for the course model-->
            <field name="name">Courses</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> <!--will display a smiley face and this message if there is no content (ie no courses)-->
                    Create the first course
                </p>
            </field>
        </record>

        <menuitem name="Odoo Academy"
                    id="menu_academy"
                    sequence="1"/> <!--id: created here; sequence: appear at the top of the list (highest priority)-->

        <menuitem id="menu_academy_sub" name="Odoo Academy" parent="menu_academy" sequence="2"/> <!--comes after the first one-->

        <!--now we create a menu item to display the action we defined above (course_list_actions)-->
        <menuitem id="menu_academy_courses" name="Courses" parent="menu_academy_sub" sequence="3"
            action="course_list_actions"/>

    </data>
</odoo>