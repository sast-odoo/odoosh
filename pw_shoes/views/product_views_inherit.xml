<?xml version="1.0" encoding="utf-8"?>
<!--modify the page displaying products so that we can see our new fields, price per pair and pairs per case.-->

<odoo>
    <data>
        <record model="ir.ui.view" id="account_product_template_view_tree_pw_shoes">
            <field name="name">account.product.template.view.tree.pw.shoes</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_view_tree"/>

            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="before">
                    <field name="pair_per_case"/>
                    <field name="price_per_pair"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>